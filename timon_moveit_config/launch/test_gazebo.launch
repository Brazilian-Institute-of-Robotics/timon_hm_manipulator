<launch>
   <arg name="rviz_config" default="$(find timon_moveit_config)/launch/moveit.rviz"/>

    <include file="$(find timon_moveit_config)/launch/planning_context.launch">
        <arg name="load_robot_description" value="false"/>
    </include>

    <include file="$(find timon_moveit_config)/launch/move_group.launch">
        <arg name="allow_trajectory_execution" value="true"/>
        <arg name="fake_execution" value="false"/>
        <arg name="info" value="true"/>
    </include>

    <include file="$(find timon_moveit_config)/launch/moveit_rviz.launch">
        <arg name="rviz_config" value="$(arg rviz_config)"/>
    </include>

    <node name="joint_state_desired_publisher" pkg="topic_tools" type="relay" args="joint_states joint_states_desired" />
</launch>