<launch>

<rosparam command="load" file="$(find jerotimon_moveit_config)/config/joint_names.yaml"/>

<include file="$(find jerotimon_moveit_config)/launch/planning_context.launch">
    <arg name="load_robot_description" value="true"/>
</include>

<node name="joint_state_publisher" pkg="joint_state_publisher" type="joint_state_publisher">
    <param name="/use_gui" value="false"/>
    <rosparam param="/source_list">[/timon/joint_states]</rosparam>
</node>

<include file="$(find jerotimon_moveit_config)/launch/move_group.launch">
    <arg name="publish_monitored_planning_scene" value="true"/>
</include>

<include file="$(find jerotimon_moveit_config)/launch/moveit_rviz.launch">
    <arg name="rviz_config" value="$(find jerotimon_moveit_config)/launch/moveit.rviz"/>
</include>

<include file="$(find manipulator_gazebo)/launch/box_real.launch">
 <!-- <arg name="rviz_config" value="$(find manipulator_gazebo)/launch/box_real.rviz"/> -->
</include>

<!-- Given the published joint states, publish tf for the robot links -->
<node name="robot_state_publisher" pkg="robot_state_publisher" type="robot_state_publisher" respawn="true" output="screen" />

</launch>