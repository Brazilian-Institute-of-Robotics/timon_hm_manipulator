<?xml version="1.0" encoding="utf-8"?>
<robot xmlns:xacro="http://www.ros.org/wiki/xacro" name="hand">
  <xacro:macro name="hand" params="connected_to:='' ns:='' rpy:='0 0 0' xyz:='0 0 0' ">
    <xacro:unless value="${connected_to == ''}">
      <joint name="${ns}_hand_joint" type="fixed">
        <parent link="${connected_to}"/>
        <child link="${ns}_hand"/>
        <origin xyz="${xyz}" rpy="${rpy}"/>
      </joint>
    </xacro:unless>
    <link name="${ns}_hand">
      <visual>
        <origin xyz="0.0 0.0 0.0" rpy="0.0 0.0 0.0" />
        <geometry>
          <mesh filename="package://manipulator_description/meshes/visual/link9.dae"/>
        </geometry>
      </visual>
      <collision>
        <origin xyz="0.0 0.0 0.0" rpy="0.0 0.0 0.0" />
        <geometry>
          <mesh filename="package://manipulator_description/meshes/collision/link9.stl"/>
        </geometry>
      </collision>
      <inertial>
        <origin xyz="0.0 0.0 0.0" rpy="0.0 0.0 0.0"/>
        <mass value="0.16499216"/>
        <inertia ixx="7.88952550e-5"  ixy="-3.13065901e-9"  ixz="4.40693303e-9" iyy="4.39861799e-5" iyz="-2.02737764e-6" izz="6.23603662e-5" />
      </inertial>
    </link>

    <link name="${ns}_hand1">
      <visual>
        <origin xyz="0.0 0.0 0.0" rpy="1.571 0.0 0.0" />
        <geometry>
          <mesh filename="package://manipulator_description/meshes/visual/link10.dae"/>
        </geometry>
      </visual>
      <collision>
        <origin xyz="0.0 0.0 0.0" rpy="1.571 0.0 0.0" />
        <geometry>
          <mesh filename="package://manipulator_description/meshes/collision/link10.stl"/>
        </geometry>
      </collision>
      <inertial>
        <origin xyz="0.0 0.0 0.0" rpy="1.571 0.0 0.0"/>
        <mass value="0.007"/>
        <inertia ixx="1.48840827e-6"  ixy="2.49592487e-8"  ixz="5.30644674e-12" iyy="2.08108627e-6" iyz="2.38181240e-14" izz="6.88193128e-7" />
      </inertial>
    </link>
    <joint name="${ns}_hand_joint1" type="continuous">
      <origin rpy="0 0 1.571" xyz="0 0 0.025"/>
      <parent link="${ns}_hand"/>
      <child link="${ns}_hand1"/>
      <axis xyz="0 0 1" rpy="0 0 0"/>
    </joint>

    <link name="${ns}_hand2">
      <visual>
        <origin xyz="0.0225 -0.007 0.0" rpy="0.0 0.0 0.0" />
        <geometry>
          <mesh filename="package://manipulator_description/meshes/visual/link11.dae"/>
        </geometry>
      </visual>
      <collision>
        <origin xyz="0.0225 -0.007 0.0" rpy="0.0 0.0 0.0" />
        <geometry>
          <mesh filename="package://manipulator_description/meshes/collision/link11.stl"/>
        </geometry>
      </collision>
      <inertial>
        <origin xyz="0.0225 -0.007 0.0" rpy="0.0 0.0 0.0"/>
        <mass value="0.16499216"/>
        <inertia ixx="7.88952550e-5"  ixy="-3.13065901e-9"  ixz="4.40693303e-9" iyy="4.39861799e-5" iyz="-2.02737764e-6" izz="6.23603662e-5" />
      </inertial>
    </link>    
    <joint name="${ns}_hand_joint_2" type="fixed">
      <origin rpy="1.5701 0.0 0.0" xyz="0.0 -0.001 0.055"/>
      <parent link="${ns}_hand1"/>
      <child link="${ns}_hand2"/>
    </joint>

   <link name="${ns}_hand3">
      <visual>
        <origin xyz="0.0 0.0 0.0" rpy="0.0 1.571 0.0" />
        <geometry>
          <mesh filename="package://manipulator_description/meshes/visual/link12.dae"/>
        </geometry>
      </visual>
      <collision>
        <origin xyz="0.0 0.0 0.0" rpy="0.0 1.571 0.0" />
        <geometry>
          <mesh filename="package://manipulator_description/meshes/collision/link12.stl"/>
        </geometry>
      </collision>
      <inertial>
        <origin xyz="0.0 0.0 0.0" rpy="0.0 1.571 0.0"/>
        <mass value="0.01873963"/>
        <inertia ixx="4.49588271e-6"  ixy="0.00000000e+0"  ixz="0.00000000e+0" iyy="1.08113872e-5" iyz="0.00000000e+0" izz="1.12040418e-5" />
      </inertial>
    </link> 
    <joint name="${ns}_hand_joint_3" type="revolute">
      <origin rpy="0.0 0.0 0.0" xyz="0.0 0.0 0.0"/>
      <parent link="${ns}_hand2"/>
      <child link="${ns}_hand3"/>
      <axis xyz="0 0 1"/>
      <limit effort="1000.0" lower="-1.90" upper="1.90" velocity="0.5"/>
    </joint> 
  </xacro:macro>
</robot>